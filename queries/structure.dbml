Table organizations {
  id UUID [pk]
  name VARCHAR(255) [not null]
  account_id UUID [unique, not null] 
  created_by UUID                   
  status VARCHAR(20) [default: 'pending'] 
  created_at TIMESTAMP
  updated_at TIMESTAMP

  Indexes {
    account_id
  }
}

Table users {
  id UUID [pk]
  organization_id UUID
  name VARCHAR(255) [not null]
  email VARCHAR(255) [not null]          // unique per org
  password VARCHAR(255)
  role VARCHAR(20) [not null]            // owner / maintainer / member
  status VARCHAR(20) [default: 'pending'] // pending / active / suspended
  invited_by UUID                        // who invited this user
  invite_token VARCHAR(255)
  expires_at TIMESTAMP
  reactivated_at TIMESTAMP
  created_at TIMESTAMP
  updated_at TIMESTAMP
  is_deleted BOOLEAN [default: false]
  deleted_at TIMESTAMP
  deleted_by UUID

  Indexes {
    (organization_id, email) [unique]
    organization_id
  }
}

Ref: users.organization_id > organizations.id [delete: cascade]
Ref: organizations.created_by > users.id
Ref: users.invited_by > users.id
